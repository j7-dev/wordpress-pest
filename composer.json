{
	"name": "wp-phpunit/example-project",
	"description": "Example project for using WP PHPUnit",
	"type": "project",
	"license": "MIT",
	"authors": [
		{
			"name": "JerryLiu",
			"email": "j7.dev.gg@gmail.com",
			"homepage": "https://github.com/j7-dev",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"J7\\Tests\\": "tests/"
		}
	},
	"require": {
		"roots/wordpress": "^6.0"
	},
	"require-dev": {
		"pestphp/pest": "^1.22",
		"phpunit/phpunit": "^9.0",
		"wp-phpunit/wp-phpunit": "^6.0",
		"yoast/phpunit-polyfills": "^1.0",
		"j7-dev/wp-plugin-trait": "0.2.6"
	},
	"scripts": {
		"test": "pest"
	},
	"config": {
		"platform": {
			"php": "8.1"
		},
		"sort-packages": true,
		"allow-plugins": {
			"roots/wordpress-core-installer": true,
			"pestphp/pest-plugin": true
		}
	}
}