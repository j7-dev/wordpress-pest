{
	"name": "wp-phpunit/example-project",
	"description": "Example project for using WP PHPUnit",
	"type": "project",
	"license": "MIT",
	"authors": [
		{
			"name": "JerryLiu",
			"email": "j7.dev.gg@gmail.com",
			"homepage": "https://github.com/j7-dev",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"J7\\Tests\\": "tests/"
		}
	},
	"require": {
		"roots/wordpress": "^6.0"
	},
	"require-dev": {
		"yoast/phpunit-polyfills": "^4.0",
		"pestphp/pest": "^3.8",
		"j7-dev/wp-plugin-trait": "0.2.6",
		"wp-phpunit/wp-phpunit": "^6.0"
	},
	"scripts": {
		"test": "pest"
	},
	"config": {
		"platform": {
			"php": "8.2"
		},
		"sort-packages": true,
		"allow-plugins": {
			"roots/wordpress-core-installer": true,
			"pestphp/pest-plugin": true
		}
	}
}